    <style>
      body{
        font-size:2rem;
        widows: 1200px;
        margin:0 auto;
        min-height:100vh;
        display:grid;
        grid-template:
           "header header header"
           "title  title   tile"
           "center center  center"
           "title  title   tile"
           "left   right"
           "flest  flist   flist"
           "title  title   tile"
           "dlist  dlist   dlist"
           "footer footer  footer";
      }

        header{
          grid-area: header;
            /* height: 50px;
            position: fixed;
            width: 1200px;
            background-color: rgba(0, 1, 3, 0.3); */
        
        }
        header ul{
            display: flex;
            list-style: none;
            justify-content: space-around;
        }
        header ul li a{
            color:rgb(216, 241, 235);
            font:20px bold;
            text-decoration: none;
        }
        .title{
          grid-area: title;
        }
        
        main{
          grid-area: center;
        }

       nav{
        grid-area: left;
       }

       aside{
        grid-area: right;
       }

       .flist{
        grid-area: flist;
       }
  
        img{
            width: 300px;
        }
  
       .flowers ,.diarys{
           display: flex;
           flex-wrap: wrap;
       }

    </style>
</head>
