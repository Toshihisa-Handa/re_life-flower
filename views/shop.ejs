    <header>ヘッダー</header>
     <div class='title'>タイトル</div>
     <main>メインイメージ</main>
     <nav>left</nav>
     <aside>right</aside>
     <div class='title'>タイトル</div>
     <div class='flist'>画像リスト</div>
     <div class='title'>タイトル</div>
     <div class='dlist'>日記リスト</div>
     <footer>フッター</footer>



      <h2><%=item[0].name%></h2>
     
      <h3><%=item.title%></h3>
      <div><img src="../images/uploads/<%= item[0].shop_img %>" alt=""></div>
      <div><img src="../images/uploads/<%= item[0].img1 %>" alt=""></div>
      <div><%=item[0].message%></div>
      <div><%=item[0].comment%></div>
      <a href="#">店舗詳細へ</a>

      <!-- ここに花一覧の記述 -->
      <h2><%=item[0].name%>のお花一覧</h2>
      <div class="flowers">
      <% fitem.forEach((fite) => { %>
      <div><a href="/flower/<%=fite.id%>">
        <div class="flower"><img src="../images/uploads/<%= fite.image %>" alt=""></div>
        <h3><%=fite.name%></h3>
        <p><%=fite.price%></p>
        <p><%=fite.feature%></p>
    </a></div>
      <% }) %>
    </div>


      <!-- ここに日記一覧の記述 -->
      <h2><%=item[0].name%>の日記一覧</h2>
    <div class="diarys">
      <% ditem.forEach((dite) => { %>
      <div><a href="/diary/<%=dite.id%>">
        <div class="diary"><img src="../images/uploads/<%= dite.image %>" alt=""></div><br>
        <p><%=dite.title%></p>
        <p><%=dite.text%></p>
    </a> </div>
      <% }) %>
    </div>




<div class='container'>
  <div class='row'>
  <% ditem.forEach((dite) => { %>
  <div class='col-lg-4'><a href="/diary/<%=dite.id%>">
    <img src="../images/uploads/<%= dite.image %>" alt="" style="width: 100%;height: 200px;">
    <div class="card-body">
      <h5 class="card-title"><%=dite.title%></h5>
      <p class="card-text"><%=dite.text%></p>
      <p class="card-text"><small class="text-muted">タグはここに</small></p>
    </div>
  </a></div>

  <% }) %>
</div>





      <h2>店舗詳細</h2>
      <div><img src="../images/uploads/<%= item[0].img2 %>" alt=""></div>
      <div>
          <h3>営業時間：<%=item[0].open%>〜<%=item[0].close%></h3>
          <h3>定休日：<%=item[0].holiday%></h3>
          <h3>住所：<%=item[0].location%></h3>
          <iframe src="<%=item[0].map %>" width='300px' frameborder="0"></iframe>

      </div>

  
    








