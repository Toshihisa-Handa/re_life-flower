<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>店舗一覧ページ</title>
    <link rel="stylesheet" href="css/style.css">
    <style>

.shopSearch{
    min-width: 240px;
    padding: 5px 10px;
    background: none;
    border: 1px solid #e5e5e5;
    border-radius: 3px;
    color: #333;
}


.shops-glid{
    display:grid;
    grid-template-rows: 0 65px 200px 50px  ;
    grid-template-columns: 1fr 1fr;
    grid-template-areas: 
        "header  header"
        ".....   ....."
        "img1    img1"
        "title1  title1"
      }

header{
    grid-area:header;
    background: rgba(177, 212, 238,0.3);
}
.img1{
    grid-area:img1;
    background: rgba(18, 100, 163, 0.3);
    background-image: url(/images/shopsimg1.png);

}
.title1{
    grid-area:title1;
    /* background: rgba(63, 98, 122, 0.3); */
    margin-left: 10%;
    line-height: 110px;
}


.shop-list{
    display:grid;
    /* grid-template-rows: 0 70px 150px 100px  ; */
    grid-template-columns: 0.5fr 9fr 0.1fr;
    grid-template-areas: 
        "left list  right"
}

.list{
    grid-area:list;
    /* background: rgba(63, 98, 122, 0.3); */
}


 .shop-container{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-top:0 ;
   }

   .shop-card{
        background: rgba(243, 242, 234, 0.3);
        width: 350px;
        height: 500px;
        border: 2px solid rgb(197, 213, 247);
        box-shadow: 5px 5px 5px 1px rgb(163, 189, 197);
        margin-right:60px;
        margin-top:100px;
       }
       .shop-card img{
         width: 100%;
         height: 250px;
       }
       .shop-card h3 {
         margin-left: 3%;
         font-size: 2rem;

       }
       .shop-card h4,.shop-card p{
           margin-left:5%;
       }

    

     



</style>
</head>
<body>



<div class="shops-glid">
    <header>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/shops">Shop</a></li>
            <li><a href="/diarys">Diary</a></li>
            <li><a href="/flowers">Flower</a></li>
            <form action="/s_search" method='get'>
                <span class='search-bar'>Search</span><input  class='shopSearch' type="text" name='kensaku' placeholder="検索ワード入力" required>
            </form>
               <% if (typeof user == 'undefined') { %>
                <li><a href="/login">Login</a></li>
                <% } else{%>
                <li><a href="/mypage">mypage</a></li>
                <li><a href="/logout">Logout</a></li>
                <% } %>
        </ul>
     </header>
     <div class="img1">

    </div>
     <div class="title1">
       <h1>Shop List</h1>
     </div>
     
    

     <div class="lists">

     </div>

</div>

 

 


<div class="shop-list">
    <div class="list">
        <div class="shop-container">
        <% items.forEach((item) => { %>

           <div class="shop-card">
             <a href="/shop/<%=item.id%>">
                <img src="images/uploads/<%= item.shop_img %>" alt="">  
                <h3><%= item.shopname%></h3>
                <h4>営業時間：<%= item.open%>~<%= item.close%></h4>
                <p>休業日：<%= item.holiday%></p>
                <p>特徴：<%= item.feature%></p>
            </a>
           </div>

        <% }) %>
        </div>
  </div>
</div>

<footer>
    <h3>Copyright  second-cube</h3>
</footer>

</body>
</html>